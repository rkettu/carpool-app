<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".GetRideActivity">

    <LinearLayout
        android:id="@+id/getRide_outherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/getRide_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3BFBBBB"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/getRide_guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/getRide_guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/getRide_guideline_center_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="68dp" />

                <TextView
                    android:id="@+id/getRide_startTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/getride_leavetime1_text"
                    android:textColor="@color/gray"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/getRide_guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/getRide_guideline_left"/>

                <EditText
                    android:id="@+id/getRide_startDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:hint="@string/getride_leavetime1_date_hint"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/getRide_startTimeTextView"
                    app:layout_constraintStart_toStartOf="@+id/getRide_guideline_left"/>

                <EditText
                    android:id="@+id/getRide_estimateStartTimeEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:hint="@string/getride_leavetime1_hour_hint"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toRightOf="@+id/getRide_startDate"
                    app:layout_constraintTop_toBottomOf="@id/getRide_startTimeTextView" />

                <TextView
                    android:id="@+id/getRide_andTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingHorizontal="16dp"
                    android:text="@string/getride_and"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/getRide_startTimeTextView" />

                <EditText
                    android:id="@+id/getRide_endDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:hint="@string/getride_leavetime2_date_hint"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/getRide_startTimeTextView"
                    app:layout_constraintLeft_toRightOf="@+id/getRide_andTextView"/>


                <EditText
                    android:id="@+id/getRide_estimateEndTimeEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:hint="@string/getride_leavetime2_hour_hint"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintRight_toLeftOf="@id/getRide_guideline_right"
                    app:layout_constraintTop_toBottomOf="@+id/getRide_startTimeTextView"
                    />

                <TextView
                    android:id="@+id/getRide_startPoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="24sp"
                    android:text="@string/getride_set_starting_point_text"
                    android:textColor="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/getRide_startDate"
                    app:layout_constraintStart_toStartOf="@+id/getRide_guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/getRide_guideline_center_right"/>

                <EditText
                    android:id="@+id/getRide_startPointEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="@string/setride_startpoint_query_hint"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/getRide_startPoint"
                    app:layout_constraintEnd_toStartOf="@id/getRide_guideline_right"
                    app:layout_constraintStart_toStartOf="@id/getRide_guideline_left"/>

                <TextView
                    android:id="@+id/getRide_endPoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="24sp"
                    android:text="@string/getride_set_ending_point_text"
                    android:textColor="@color/gray"
                    app:layout_constraintTop_toBottomOf="@+id/getRide_startPointEditText"
                    app:layout_constraintStart_toStartOf="@+id/getRide_guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/getRide_guideline_center_right"/>

                <EditText
                    android:id="@+id/getRide_destinationEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="@string/setride_destination_query_hint"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/getRide_endPoint"
                    app:layout_constraintEnd_toStartOf="@id/getRide_guideline_right"
                    app:layout_constraintStart_toStartOf="@id/getRide_guideline_left"/>

                <Button
                    android:id="@+id/getRide_btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button2"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/getride_search_btn_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/getRide_destinationEditText"
                    app:layout_constraintStart_toStartOf="@id/getRide_guideline_left"
                    app:layout_constraintEnd_toStartOf="@id/getRide_guideline_right"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <Button
            android:id="@+id/set_ride_drawer_bottom"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/hiden_drawer_bottom"
            android:drawableTop="@drawable/ic_dehaze_black_24dp"
            android:drawablePadding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/set_ride_linearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Spinner
            android:id="@+id/getRide_sortListSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/getRideSpinnerItems"
            android:gravity="start"
            app:layout_constraintLeft_toLeftOf="parent" />


    </LinearLayout>

    <ListView
        android:id="@+id/getRide_rideListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="14dp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getRide_outherLayout" />






