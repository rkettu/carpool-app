<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rating_dialog_profile_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_person_black_100dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FNAME"
        android:id="@+id/rating_dialog_fname"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_star_rate_18"
        android:text="5.1 / 5.0"
        android:id="@+id/rating_dialog_currentRating"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        android:id="@+id/rating_dialog_ratingBar"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="RATE"
        android:id="@+id/rating_dialog_button"
        />



</LinearLayout>